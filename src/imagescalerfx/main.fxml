<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>


<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="imagescalerfx.Controller">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <left>
            <VBox prefHeight="375.0" prefWidth="150.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Images" />
                  <ListView fx:id="listFiles" prefHeight="383.0" prefWidth="150.0" />
               </children>
            </VBox>
         </left>
         <right>
            <VBox prefHeight="375.0" prefWidth="150.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Scaled Images" />
                  <ListView fx:id="listThumbs" prefHeight="384.0" prefWidth="150.0" />
               </children>
            </VBox>
         </right>
         <center>
            <VBox>
               <children>
                  <Button fx:id="btStart" lineSpacing="30.0" mnemonicParsing="false" onMouseClicked="#startApp" text="Start" textAlignment="CENTER" textOverrun="CLIP" />
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</GridPane>
